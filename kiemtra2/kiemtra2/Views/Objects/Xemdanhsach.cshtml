@model IEnumerable<kiemtra2.Models.Product>

@{
    ViewBag.Title = "Xemdanhsach";
}

<h2>Xemdanhsach</h2>

@using (Html.BeginForm())
{
    <p>
        Tìm mặt hàng: @Html.TextBox("SearchString")
        <input type="submit" value="Tìm" />
    </p>
}
<table class="table">
    <tr>
        <th>
            Mã SP
        </th>
        <th>
            Tên SP
        </th>
        <th>
            Giá
        </th>
        <th>
            Danh mục
        </th>
        <th>
            Ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catalogy.CatalogyName)
            </td>
            <td>
                @{
                    string ImagePath = "~/Images/" + item.Image;
                }
                <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            </td>
            <td>
                @Html.ActionLink("Xóa", "Xoadulieu", new { id = item.ProductID })
            </td>
        </tr>
    }

</table>